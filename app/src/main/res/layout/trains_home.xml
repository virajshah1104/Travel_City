<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/centralbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:text="C"
        android:textStyle="bold"
        android:textSize="40sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="203dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/centraltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="CENTRAL"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/centralbtn"
        android:layout_alignRight="@+id/centralbtn"
        android:layout_alignEnd="@+id/centralbtn" />
    <Button
        android:id="@+id/harbourbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H"
        android:textStyle="bold"
        android:textSize="40sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignTop="@+id/centralbtn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/harbourtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="HARBOUR"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/centraltext"
        android:layout_alignBottom="@+id/centraltext"
        android:layout_alignRight="@+id/harbourbtn"
        android:layout_alignEnd="@+id/harbourbtn" />

    <Button
        android:id="@+id/westernbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W"
        android:textStyle="bold"
        android:textSize="40sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignBaseline="@+id/harbourbtn"
        android:layout_alignBottom="@+id/harbourbtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/westerntext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="WESTERN"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/harbourtext"
        android:layout_alignBottom="@+id/harbourtext"
        android:layout_alignRight="@+id/westernbtn"
        android:layout_alignEnd="@+id/westernbtn" />


</RelativeLayout>